@model List<StutorDataObjects.TutorAppointments>


<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>


@{
    ViewBag.Title = "Tutor Appointments";
}

<p>

</p>

@if (Model == null || Model.Count == 0)
{
    <h2>You are currently not being tutored for any classes! </h2>
}
else
{
    <h2>Classes you currently have a tutor for</h2>
    <div class="panel-body">
    <table class="table table-striped table-bordered display" id="stutorTable">
        <thead>
            <tr>
                <th>
                    Day
                </th>
                <th>
                    Time
                </th>
                <th>
                    Subject Name
                </th>
                <th>
                    Tutor's First Name
                </th>
                <th>
                    Tutor's Last Name
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TutorFirstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TutorLastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-xs btn-primary"}) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-xs btn-primary" }) |
                        @Html.ActionLink("Drop", "Delete", new { id = item.ID }, new { @class = "btn btn-xs btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    

}

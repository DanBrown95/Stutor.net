@model List<StutorDataObjects.SubjectRequest>

@{
    ViewBag.Title = "SubjectRequests";
}

@if (Model.Count == 0 || Model == null)
{
    <br/>
    <h2>There are currently no pending subject requests.</h2>
    <br />
    <p>
    @Html.ActionLink("Create New", "Create")
</p>
}
else
{
    
<h2>All Subject Requests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Subject Area
        </th>
        <th>
            Subject Name
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.subjectAreaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subjectName)
        </td>
        <td>
            @Html.ActionLink("Approve", "Approve", new { id = item.SubjectRequestID }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SubjectRequestID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
    
}

@model StutorDataObjects.SubjectRequest

@{
    ViewBag.Title = "Request new subject";
}

<h2>Request new subject</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Label("Subject Area Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.subjectAreaName, new SelectList(ViewBag.subjectAreas, "SubjectAreaName", "SubjectAreaName"), new { @class = "control-dropdown" })
                @*@Html.EditorFor(model => model.subjectAreaName)*@
                @Html.ValidationMessageFor(model => model.subjectAreaName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.subjectName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.subjectName)
                @Html.ValidationMessageFor(model => model.subjectName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
